{
  "extends": [
    "next/core-web-vitals"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "react-hooks/rules-of-hooks": "warn",
    "react-hooks/exhaustive-deps": "warn",
    "@next/next/no-img-element": "off",
    "jsx-a11y/alt-text": "warn"
  },
  "ignorePatterns": [
    "node_modules/",
    ".next/",
    "public/",
    "*.json",
    "*.md",
    "*.config.js",
    "*.config.mjs",
    "postcss.config.mjs",
    "next.config.mjs",
    "tailwind.config.ts"
  ]
} 